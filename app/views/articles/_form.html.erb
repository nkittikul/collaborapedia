<%= form_for [wiki, article] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter article title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter article body" %>
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
